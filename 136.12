#include <iostream>
#include <string>
#include <cmath>

using namespace std;

int main()
{
    int n;
    int sum;
    float res;

    cout << "Input n: " ;
    cin >> n;

    sum = 0;
    for (int i = 1; i < n + 1; i++){
        sum += i;
        }
    res = sin(abs(sum));
    cout << "Result: " << res << endl; 
}
